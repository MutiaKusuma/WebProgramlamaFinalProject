@model WebProgramlamaFinalProject.Models.ViewModels.TrainerFormViewModel

<h2 class="mb-4">Create Trainer</h2>

<div asp-validation-summary="All" class="text-danger mb-3"></div>
@Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

<form asp-action="CreateTrainer" asp-controller="Admin" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Trainer.Name" class="form-label"></label>
        <input asp-for="Trainer.Name" class="form-control" />
        <span asp-validation-for="Trainer.Name" class="text-danger"></span>
    </div>

    <h4 class="mt-4 mb-2">Select Services</h4>
    <div class="mb-3">
        @foreach (var s in Model.Services)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedServiceIds" value="@s.Id" id="service_@s.Id" />
                <label class="form-check-label" for="service_@s.Id">@s.Name</label>
            </div>
        }
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="/Admin/ManageTrainers" class="btn btn-secondary">← Back to Trainers</a>
    </div>
</form>

