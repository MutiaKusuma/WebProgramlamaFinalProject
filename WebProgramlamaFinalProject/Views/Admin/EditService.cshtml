@model WebProgramlamaFinalProject.Models.Service

<h2>Edit Service</h2>

<form asp-action="EditService" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DurationInMinutes"></label>
        <input asp-for="DurationInMinutes" class="form-control" type="number" required />
        <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a asp-action="ManageServices" class="btn btn-secondary mt-3">Cancel</a>
</form>
