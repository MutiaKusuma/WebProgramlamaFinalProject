@model WebProgramlamaFinalProject.Models.Service

<h2 class="mb-4">Edit Service</h2>

<form asp-action="EditService" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DurationInMinutes" class="form-label"></label>
        <input asp-for="DurationInMinutes" class="form-control" type="number" required />
        <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price (TL)</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="ManageServices" class="btn btn-secondary">Cancel</a>
    </div>
</form>
