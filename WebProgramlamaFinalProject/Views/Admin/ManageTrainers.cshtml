@model IEnumerable<WebProgramlamaFinalProject.Models.Trainer>

<h2>Manage Trainers</h2>

<a class="btn btn-success" href="/Admin/CreateTrainer">Add Trainer</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Services</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>

                <td>
                    @if (t.TrainerServices != null && t.TrainerServices.Any())
                    {
                        @string.Join(", ", t.TrainerServices.Select(ts => ts.Service.Name))
                    }
                    else
                    {
                        <span class="text-muted">No Services Assigned</span>
                    }
                </td>


                <td>
                    <a href="/Admin/EditTrainer/@t.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Admin/DeleteTrainer/@t.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure?')">Delete</a>
                    <a href="/Admin/SetSchedule/@t.Id" class="btn btn-info btn-sm">Schedule</a>
                </td>
            </tr>
        }
    </tbody>
</table>
