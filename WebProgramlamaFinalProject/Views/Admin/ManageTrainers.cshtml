@model IEnumerable<WebProgramlamaFinalProject.Models.Trainer>

<h2 class="mb-3">Manage Trainers</h2>

<a class="btn btn-success mb-3" href="/Admin/CreateTrainer">Add Trainer</a>

@if (!Model.Any())
{
    <p class="text-muted">No trainers found.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Services</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Name</td>
                        <td>
                            @if (t.TrainerServices != null && t.TrainerServices.Any())
                            {
                                @string.Join(", ", t.TrainerServices.Select(ts => ts.Service.Name))
                            }
                            else
                            {
                                <span class="text-muted">No Services Assigned</span>
                            }
                        </td>
                        <td>
                            <a href="/Admin/EditTrainer/@t.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                            <a href="/Admin/DeleteTrainer/@t.Id" class="btn btn-danger btn-sm me-1"
                               onclick="return confirm('Are you sure?')">Delete</a>
                            <a href="/Admin/SetSchedule/@t.Id" class="btn btn-info btn-sm">Schedule</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
