@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">

    <h2 class="text-center mb-5 fw-bold">Welcome Admin</h2>
    <p class="text-center mb-4">Choose what you want to manage:</p>

    <div class="row justify-content-center g-4">

        <div class="col-md-4">
            <a href="/Admin/ManageAppointments" class="text-decoration-none">
                <div class="card text-center shadow h-100 hover-scale">
                    <div class="card-body">
                        <h5 class="card-title">Manage Appointments</h5>
                        <p class="card-text"><i class="bi bi-calendar-check" style="font-size:2rem;"></i></p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="/Admin/ManageTrainers" class="text-decoration-none">
                <div class="card text-center shadow h-100 hover-scale">
                    <div class="card-body">
                        <h5 class="card-title">Manage Trainers</h5>
                        <p class="card-text"><i class="bi bi-person-badge" style="font-size:2rem;"></i></p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="/Admin/ManageServices" class="text-decoration-none">
                <div class="card text-center shadow h-100 hover-scale">
                    <div class="card-body">
                        <h5 class="card-title">Manage Services</h5>
                        <p class="card-text"><i class="bi bi-gear" style="font-size:2rem;"></i></p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.3s;
        cursor: pointer;
    }

        .hover-scale:hover {
            transform: scale(1.05);
        }
</style>
