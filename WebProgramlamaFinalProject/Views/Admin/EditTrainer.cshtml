@model WebProgramlamaFinalProject.Models.ViewModels.TrainerFormViewModel

<h2 class="mb-4">Edit Trainer</h2>

<div asp-validation-summary="All" class="text-danger mb-3"></div>

<form asp-action="EditTrainer" asp-controller="Admin" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Trainer.Id" />

    <div class="mb-3">
        <label asp-for="Trainer.Name" class="form-label"></label>
        <input asp-for="Trainer.Name" class="form-control" required />
        <span asp-validation-for="Trainer.Name" class="text-danger"></span>
    </div>

    <h5 class="mt-4 mb-2">Select Services</h5>
    <div class="mb-3">
        @foreach (var s in Model.Services)
        {
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       name="SelectedServiceIds"
                       value="@s.Id"
                       id="service_@s.Id"
                       @(Model.SelectedServiceIds.Contains(s.Id) ? "checked" : "") />
                <label class="form-check-label" for="service_@s.Id">@s.Name</label>
            </div>
        }
    </div>

    <div class="d-flex gap-2 mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="ManageTrainers" class="btn btn-secondary">Cancel</a>
    </div>
</form>
