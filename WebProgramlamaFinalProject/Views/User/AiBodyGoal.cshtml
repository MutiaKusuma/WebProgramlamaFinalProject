@model AiFitnessResultViewModel

<div class="container mt-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
        <h2 class="mb-4 text-center">Body Analysis Result</h2>

        @if (!string.IsNullOrEmpty(Model.UploadedImageUrl))
        {
            <div class="text-center mb-3">
                <img src="@Model.UploadedImageUrl" class="img-fluid rounded" style="max-height:300px;" />
            </div>
        }

        <p><strong>Target Goal:</strong> @Model.TargetGoal</p>

        <hr />
        <h4>AI Recommendation</h4>
        <div class="p-3 mb-3 bg-light rounded" style="white-space: pre-wrap; font-family: inherit;">
            @Model.DietRecommendation
        </div>

        <div class="text-center">
            <a asp-action="AiFeature" class="btn btn-primary btn-lg">Back</a>
        </div>
    </div>
</div>
