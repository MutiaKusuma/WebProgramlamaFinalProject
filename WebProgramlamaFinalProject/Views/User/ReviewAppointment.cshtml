@model ReviewAppointmentViewModel

<div class="container mt-5">
    <h2 class="mb-3">Review Appointment</h2>
    <hr />

    <div class="mb-3">
        <p><strong>Trainer:</strong> @Model.TrainerName</p>
        <p><strong>Service:</strong> @Model.ServiceName</p>
        <p><strong>Date:</strong> @Model.StartTime.ToString("dd MMM yyyy")</p>
        <p><strong>Time:</strong> @Model.StartTime.ToString("HH:mm") - @Model.EndTime.ToString("HH:mm")</p>
    </div>

    <form asp-action="SubmitAppointment" method="post" class="review-appointment-form">
        <!-- hidden fields -->
        <input type="hidden" asp-for="TrainerId" />
        <input type="hidden" asp-for="ServiceId" />
        <input type="hidden" asp-for="StartTime" />
        <input type="hidden" asp-for="EndTime" />

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Submit Appointment</button>
            <a href="/User/ChooseSlot" class="btn btn-secondary">← Back</a>
        </div>
    </form>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $(".review-appointment-form").on("submit", function (e) {
                e.preventDefault(); 

                alert("Submitting your appointment...");

       
                $(this).find("button[type='submit']").prop("disabled", true).text("Submitting...");

                
                this.submit();
            });
        });
    </script>
}
