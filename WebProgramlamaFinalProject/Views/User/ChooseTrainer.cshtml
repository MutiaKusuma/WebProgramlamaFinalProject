@model List<WebProgramlamaFinalProject.Models.Trainer>

<div class="container mt-5">
    <h2 class="mb-3">Choose Your Trainer</h2>

    <p class="lead">
        Selected Service: <strong>@ViewBag.Service.Name</strong>
    </p>

    <form method="post">
        <input type="hidden" name="serviceId" value="@ViewBag.Service.Id" />

        <div class="list-group mb-3">
            @foreach (var t in Model)
            {
                <label class="list-group-item list-group-item-action">
                    <input type="radio" name="trainerId" value="@t.Id" required class="form-check-input me-2" />
                    @t.Name
                </label>
            }
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Next</button>
            <a href="/User/ChooseService" class="btn btn-secondary">← Back</a>
        </div>
    </form>
</div>
