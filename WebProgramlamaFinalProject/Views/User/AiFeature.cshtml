@model AiFitnessInputViewModel

<div class="container mt-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 500px;">
        <h2 class="mb-4 text-center">AI Fitness & Diet Recommendation</h2>

        <form asp-action="AiFeature" method="post">
            <div class="mb-3">
                <label asp-for="HeightCm" class="form-label">Height (cm)</label>
                <input asp-for="HeightCm" class="form-control" placeholder="Enter your height in cm" />
                <span asp-validation-for="HeightCm" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="WeightKg" class="form-label">Weight (kg)</label>
                <input asp-for="WeightKg" class="form-control" placeholder="Enter your weight in kg" />
                <span asp-validation-for="WeightKg" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg mt-3">Analyze with AI</button>
            </div>
        </form>
    </div>
</div>
