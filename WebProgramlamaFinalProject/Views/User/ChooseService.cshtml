@model List<WebProgramlamaFinalProject.Models.Service>

<div class="container mt-5">
    <h2 class="mb-3">Select a Service</h2>

    <form asp-action="ChooseService" asp-controller="User" method="post">
        <div class="list-group mb-3">
            @foreach (var s in Model)
            {
                <label class="list-group-item list-group-item-action">
                    <input type="radio" name="serviceId" value="@s.Id" required class="form-check-input me-2" />
                    <strong>@s.Name</strong> — @s.DurationInMinutes minutes — ₺@s.Price
                </label>
            }
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Continue</button>
            <a href="/User/Dashboard" class="btn btn-secondary">← Back</a>
        </div>
    </form>
</div>
