@model AiFitnessResultViewModel

<div class="container mt-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
        <h2 class="mb-4 text-center">AI Fitness Result</h2>

        <div class="mb-3">
            <p><strong>BMI:</strong> @Model.BMI</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Daily Calories:</strong> @Model.DailyCalories kcal</p>
        </div>

        <hr />

        <h4>Diet Recommendation</h4>
        <div class="p-3 mb-3 bg-light rounded" style="white-space: pre-wrap; font-family: inherit;">
            @Model.DietRecommendation
        </div>

        <div class="text-center">
            <a asp-action="Dashboard" class="btn btn-primary btn-lg">Back to Home</a>
        </div>
    </div>
</div>
