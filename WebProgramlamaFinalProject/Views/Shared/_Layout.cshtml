@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartFit GYM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProgramlamaFinalProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    SmartFit GYM
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Home link -->
                        <li class="nav-item">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                var isAdmin = User.IsInRole("Admin");
                                if (isAdmin)
                                {
                                    <a class="nav-link text-dark home-link" asp-controller="Admin" asp-action="Dashboard">Home</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark home-link" asp-controller="User" asp-action="Dashboard">Home</a>
                                }
                            }
                            else
                            {
                                <a class="nav-link text-dark home-link" asp-controller="Home" asp-action="Index">Home</a>
                            }
                        </li>

                        <!-- Admin Panel link -->
                        <li class="nav-item">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                var isAdmin = User.IsInRole("Admin");
                                if (isAdmin)
                                {
                                    <a class="nav-link text-dark admin-link" asp-controller="Admin" asp-action="Dashboard">Admin Panel</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark admin-link" href="javascript:void(0);" id="alertAdmin">Admin Panel</a>
                                }
                            }
                            else
                            {
                                <a class="nav-link text-dark admin-link" href="#">Admin Panel</a>
                            }
                        </li>

                        <!-- Database dropdown menu (Admin) -->
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                   id="navbarDatabase" role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Database
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDatabase">
                                    <li><a class="dropdown-item" href="/api/trainersapi">All Trainers</a></li>
                                    <li><a class="dropdown-item" href="/api/trainersapi?service=Yoga">Yoga Trainers</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/api/appointmentsapi">All Appointments</a></li>
                                    <li><a class="dropdown-item" href="/api/appointmentsapi?status=Approved">Approved Appointments</a></li>
                                    <li><a class="dropdown-item" href="/api/appointmentsapi?status=Pending">Pending Appointments</a></li>
                                    <li><a class="dropdown-item" href="/api/appointmentsapi?status=Rejected">Rejected Appointments</a></li>
                                </ul>
                            </li>
                        }


                    </ul>


                    <!-- Login / Logout Partial -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
       
        document.getElementById('alertAdmin')?.addEventListener('click', function () {
            alert('Only Admin Can Access This Page');
        });

      
        $(document).ready(function() {
            var currentUrl = window.location.pathname.toLowerCase();
            $('.navbar-nav .nav-link').each(function() {
                var linkUrl = $(this).attr('href')?.toLowerCase();
                if (linkUrl && currentUrl.includes(linkUrl)) {
                    $(this).addClass('active fw-bold text-primary');
                }
            });

      
            $('.navbar-nav .nav-link').hover(
                function() { $(this).addClass('text-info'); },
                function() { $(this).removeClass('text-info'); }
            );
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
